        ff = true 
[alias]
        co = checkout
        ci = commit
        st = status
        br = branch
        tree = log --graph --abbrev-commit --decorate --all
        today = log --since=midnight
        yesterday = log --since=yesterday.midnight --before=yesterday.11:59pm
[color]
        branch = auto
        diff = auto
        status = auto
[color "branch"]
        current = magenta
        local = yellow
        remote = cyan
[color "diff"]
        meta = yellow
        frag = magenta
        old = red
        new = cyan
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[core]
        excludesfile = /Users/deac/.gitignore_global
        ignorecase = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[push]
        default = simple
