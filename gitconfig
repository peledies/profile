[pull]
        rebase = false
[difftool "smerge"]
        cmd = smerge \"$BASE\" \"$LOCAL\" \"$REMOTE\"
[diff]
        tool = smerge
[mergetool "smerge"]
        cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
        trustExitCode = true
